# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
# Development: Use Docker PostgreSQL on port 5433 (to avoid conflict with local PostgreSQL)
# Production: Update with your production database credentials
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/pokedex?schema=public"

# CORS Configuration
# Development: Allow all origins (*)
# Production: Specify allowed frontend domain
CORS_ORIGIN=*

# Seeding Configuration
# SKIP_IMAGE_DOWNLOAD: Skip downloading Pokemon sprite images during seeding
# Set to "true" to use remote URLs directly (faster, no local storage needed)
# Set to "false" or omit to download and save images locally (slower, requires storage)
SKIP_IMAGE_DOWNLOAD=true
